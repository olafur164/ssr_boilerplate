{
  "name": "ssr_boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "watch": "webpack --watch",
    "server": "NODE_ENV=server nodemon server.js",
    "dev": "NODE_ENV=server babel-node server.js",
    "mongo": "mongod --port 27017 --dbpath=./data",
    "compile-routes": "NODE_ENV=server babel src/client/components/Router/Routes.js -o src/client/components/Router/CompiledRoutes.js",
    "build": "webpack",
    "build:prod": "yarn run babel:prod && webpack --config webpack.prod.js",
    "watch:prod": "webpack --config webpack.prod.js --watch",
    "babel:prod": "yarn run babel:clear && mkdir public/production && yarn run babel:client",
    "babel:clear": "del public/production",
    "babel:client": "NODE_ENV=server babel src/client -d public/production/client",
    "babel:components": "NODE_ENV=server babel src/client/components -d public/production/client/components",
    "babel:containers": "NODE_ENV=server babel src/client/containers -d public/production/client/containers",
    "babel:redux": "NODE_ENV=server babel src/client/redux -d public/production/client/redux",
    "babel:auth": "NODE_ENV=server babel src/client/auth -d public/production/client/auth",
    "babel:validation": "NODE_ENV=server babel src/server/validation -d public/production/server/validation"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "body-parser": "^1.18.2",
    "compression-webpack-plugin": "^1.0.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.10.0",
    "eslint-loader": "^1.9.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "json-loader": "^0.5.7",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "prop-types": "^15.6.0",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.12.5",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  }
}
